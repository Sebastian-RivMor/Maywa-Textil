{
    "require": {
        "phpmailer/phpmailer": "^6.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "codeception/codeception": "^5.3",
        "codeception/module-phpbrowser": "^3.0",
        "codeception/module-asserts": "*",
        "codeception/module-rest": "^3.4",
        "codeception/module-db": "^3.2"
    },
    "scripts": {
        "test": "phpunit",
        "test:md": "codecept run Acceptance --xml=tests/_output/report.xml && php tools/junit_to_md.php tests/_output/report.xml tests/_output/report.md"
    }

}
